<!--body content for estimates page-->
<div class="container mt-4">
    <h1>Estimate Your Binge Consulting Fee</h1>

    <!--user enters desired hours-->
    <label for="hoursInput">Enter Hours Needed:</label>
    <input type="number" id="hoursInput" min="1" placeholder="Enter hours" class="form-control mb-2">

    <!--error message displayed in case of invalid input-->
    <div id="error-message" class="d-none text-danger mb-3">Please enter a valid number of hours.</div>

    <!--unchangeable rate value (visible only)-->
    <label for="rate">Hourly Rate:</label>
    <input type="text" id="rate" value="$20.00" readonly class="form-control mb-2">

    <!--button to calculate estimate-->
    <button id="calculateBtn" class="btn btn-primary mb-3">Calculate Total</button>

    <!--output of estimate based on hours input and hourly rate-->
    <label for="totalCost">Total Cost:</label>
    <input type="text" id="totalCost" readonly class="form-control mb-2">

    <!--button to take the user back to the home page-->
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Back to Home</a>

    <!--pulls in the associated jquery-->
    <script src="@Url.Content("~/js/estimates.js")"></script>

</div>
