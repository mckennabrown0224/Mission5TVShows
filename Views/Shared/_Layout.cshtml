<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!--Web page tab title -->
    <title>Binge Consultant</title>
    
    <!--Web page tab icon -->
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />
    
    <!-- CSS file for the entire site -->
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>

<!-- Header Section -->
<div class="header-container">
    <h1>McKenna Brown: Binge Consultant</h1>
    <h4>Lost in the Streaming Jungle? Let the Binge Consultant Guide You!</h4>
</div>

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container justify-content-center"> <!-- Center the navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <!--Link back to home page (index)-->
                <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index") ? "active" : "")" href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="nav-item">
                <!--Link to estimates page (estimates)-->
                <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Estimates") ? "active" : "")" href="@Url.Action("Estimates", "Home")">Get An Estimate</a>
            </li>
        </ul>
    </div>
</nav>

<!-- pulls in content from Index.cshtml or Estimates.cshtml -->
<div class="content-wrapper">
    @RenderBody()
</div>

<!-- Custom footer with a copyright and my name-->
<footer>
    <div>Â© 2025 Binge Consultant. Created By McKenna Brown. All rights reserved.</div>
</footer>

<!-- Bootstrap & jQuery Scripts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/estimates.js"></script>


</body>
</html>

